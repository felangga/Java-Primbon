  arti := MenuAppendStringImage('Arti '+Caribintang(Simpandata), LoadImage('/arti.png')); 
  ciri := MenuAppendStringImage('Ciri - Ciri '+Caribintang(Simpandata), LoadImage('/ciri.png')); 
  pekerjaan := MenuAppendStringImage('Pekerjaan '+Caribintang(Simpandata), LoadImage('/job.png')); 
  kesehatan := MenuAppendStringImage('Kesehatan '+Caribintang(Simpandata), LoadImage('/PMR.png')); 
  jodoh := MenuAppendStringImage('Jodoh '+Caribintang(Simpandata), LoadImage('/jodoh.png'));
  pengaruh := MenuAppendStringImage('Lain - lain', LoadImage('/pengaruh.png'));
  
  AddCommand(cm_Next);
  AddCommand(cm_bck);
  repeat
    mnu3 := GetClickedCommand;    
    if mnu3 = cm_bck then
      MenurutHari;
  until mnu3 <> EmptyCommand;
  
  if MenuGetSelectedIndex = arti then 
  begin
    BlankForm(Caribintang(Simpandata),'Arti');
  end;
  if MenuGetSelectedIndex = ciri then 
  begin
    BlankForm(Caribintang(Simpandata),'Ciri');
