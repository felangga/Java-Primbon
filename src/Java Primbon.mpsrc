function hitung(nmA,nmB : string) : string;
var 	rbA,rbB : String;
			pjA,pjB : Integer;
			ht1,ht2 : Integer;
			htngO,htngO2,simpenO : Integer;
			simpen			 : Integer;
begin
  rbA := Upcase(nmA);
  rbB := Upcase(nmB);
  pjA := Length(rbA);
  pjB := Length(rbB);
  
  ht1 := 0;
  
  begin
    if POS(rbA,'L') <> -1 then ht1 := ht1 + 2;
    if POS(rbA,'O') <> -1 then ht1 := ht1 + 2;        
    if POS(rbA,'V') <> -1 then ht1 := ht1 + 2;
    if POS(rbA,'E') <> -1 then ht1 := ht1 + 2;
    
    if POS(rbA,'Y') <> -1 then ht1 := ht1 + 3;
    if POS(rbA,'O') <> -1 then ht1 := ht1 + 1;
    if POS(rbA,'U') <> -1 then ht1 := ht1 + 3;    
  end;
  
  begin
    if POS(rbB,'L') <> -1 then ht1 := ht1 + 2;
    if POS(rbB,'O') <> -1 then ht1 := ht1 + 2;        
    if POS(rbB,'V') <> -1 then ht1 := ht1 + 2;
    if POS(rbB,'E') <> -1 then ht1 := ht1 + 2;
    
    if POS(rbB,'Y') <> -1 then ht1 := ht1 + 3;
    if POS(rbB,'O') <> -1 then ht1 := ht1 + 1;
    if POS(rbB,'U') <> -1 then ht1 := ht1 + 3;    
  end;
   
  simpen := 0;
  
  if (ht1 >  0) then simpen :=   5-((pjA + pjB)/2)
	if (ht1 >  2) then simpen :=  10-((pjA + pjB)/2)
	if (ht1 >  4) then simpen :=  20-((pjA + pjB)/2)
	if (ht1 >  6) then simpen :=  30-((pjA + pjB)/2)
	if (ht1 >  8) then simpen :=  40-((pjA + pjB)/2)
	if (ht1 > 10) then simpen :=  50-((pjA + pjB)/2)
	if (ht1 > 12) then simpen :=  60-((pjA + pjB)/2)
	if (ht1 > 14) then simpen :=  70-((pjA + pjB)/2)
	if (ht1 > 16) then simpen :=  80-((pjA + pjB)/2)
	if (ht1 > 18) then simpen :=  90-((pjA + pjB)/2)
	if (ht1 > 20) then simpen := 100-((pjA + pjB)/2)
