procedure PRK;
var 	Tanggal, CTH, Text : Integer;
			mnu2,mnu3		: Command;
begin
  ClearForm;
  SetFormTitle('Primbon Kelahiran');
  SetTicker('Ketahui sifat anda dengan memasukan tanggal lahir anda.');
    
  Tanggal := FormAddTextField('Masukan tanggal lahir anda', SimpanData, 10, TF_PHONENUMBER); 
  CTH			:= FormAddString('Contoh : 09*06*1993, harus dipisahkan dengan *, +, atau #');
  
  ShowForm;
  
  addcommand(cm_Next);
  addcommand(cm_Bck);
  repeat
    chck := GetClickedCommand;
    
    if chck = cm_Next then
      begin
        SimpanData := FormGetText(Tanggal);
        SimpanTgl  := SimpanData;
        PisahTgl(SimpanData);
        if (StringToInteger(STG) <= 31) and (StringToInteger(SBL) <= 12) and (StringToInteger(STH) >= 0000) then
          MenurutTanggal;
      end;
        
  until chck = cm_Bck;
  
  MainMenu;					{ Kembali ke Menu Utama }
end;

