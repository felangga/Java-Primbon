function caribintang(data : string) : string;
var T,B : Integer;
begin
  PisahTgl(Data);
  
  T := StringToInteger(STG);
  B := StringToInteger(SBL);
  
  if ((T >= 19) and (B = 1)) or ((T <= 18) and (B = 2)) then 
     Caribintang := 'Aquarius';
 else
  if ((T >= 19) and (B = 2)) or ((T <= 20) and (B = 3)) then 
     Caribintang := 'Pisces';
 else
  if ((T >= 20) and (B = 3)) or ((T <= 19) and (B = 4)) then 
     Caribintang := 'Aries';
 else
  if ((T >= 20) and (B = 4)) or ((T <= 20) and (B = 5)) then 
     Caribintang := 'Taurus';
 else
  if ((T >= 21) and (B = 5)) or ((T <= 21) and (B = 6)) then 
     Caribintang := 'Gemini';
 else
  if ((T >= 22) and (B = 6)) or ((T <= 22) and (B = 7)) then 
     Caribintang := 'Cancer';
 else
  if ((T >= 23) and (B = 7)) or ((T <= 22) and (B = 8)) then 
     Caribintang := 'Leo';
 else
  if ((T >= 23) and (B = 8)) or ((T <= 22) and (B = 9)) then 
     Caribintang := 'Virgo';
 else
  if ((T >= 23) and (B = 9)) or ((T <= 23) and (B = 10)) then 
     Caribintang := 'Libra';
 else
  if ((T >= 24) and (B = 10)) or ((T <= 21) and (B = 11)) then 
     Caribintang := 'Scorpio';
 else
  if ((T >= 23) and (B = 11)) or ((T <= 21) and (B = 12)) then 
     Caribintang := 'Sagitarius';
 else
  if ((T >= 22) and (B = 12)) or ((T <= 18) and (B = 1)) then 
     Caribintang := 'Carpicornus';
end;


Procedure MenurutTanggal;
var	Text : Integer;
		mnu2 : Command;	
begin
  ClearForm;
  ShowForm;
  SetFormTitle('Menurut Tanggal');
  PisahTgl(SimpanData);
  AddCommand(cm_Bck);
  AddCommand(cm_Next);
  Text	:= FormAddString(Bukadatabase('Kelahiran',STG));
  repeat
    mnu2 := GetClickedCommand;
    if mnu2 = cm_Next then
      MenurutHari;
  until mnu2 = cm_Bck;
  PRK;
end;      

Procedure MenurutHari;
