Procedure KecocokanWeton;
var 	Aku, Kowe : Integer;
			Menu,mnu2	: Command;
			SA,SB			: String;
			AI,AII,BI,BII,JmlhA,JmlhB, Text : Integer;
begin
  clearform;
  Showform;
  SetFormTitle('Weton pasangan');
  
  SetTicker('Menghitung kecocokan pasangan menggunakan perhitungan hari dan weton pasangan');
  
  Aku := FormAddTextField('Masukan tanggal lahir anda', MasterA, 10, TF_PHONENUMBER); 
	Kowe := FormAddTextField('Masukan tanggal lahir pasangan', MasterB, 10, TF_PHONENUMBER);
	
	AddCommand(cm_next);
	AddCommand(cm_bck);
	
	Repeat
	  Menu := GetClickedCommand;
	  if Menu = cm_next then
	  begin
	    SA := FormGetText(Aku);
	    SB := FormGetText(Kowe);
	    
	    PisahTgl(SA);
	    if not (StringToInteger(STG) <= 31) and (StringToInteger(SBL) <= 12) and (StringToInteger(STH) >= 0000) then
	       KecocokanWeton;

      PisahTgl(SB);   
	    if not (StringToInteger(STG) <= 31) and (StringToInteger(SBL) <= 12) and (StringToInteger(STH) >= 0000) then
	       KecocokanWeton;

			MasterA := SA;
	    MasterB := SB;
	    
	    
	    AI  := KonversiHari(CariHari(MasterA));
	    AII := KonversiNeptu(CariWeton(MasterA));
	    
	    BI  := KonversiHari(CariHari(MasterB));
	    BII := KonversiNeptu(CariWeton(MasterB));
	    
	    JmlhA := (AI + AII) + (BI + BII);
	    
	    JmlhB := JmlhA mod 5;
	    
	    ClearForm;
	    ShowForm;
	    SetFormTitle('Hasilnya');
	    
	    Text := FormAddString(Hasil(JmlhB));
	    
	    AddCommand(cm_bck);
	    
	    repeat
	      mnu2 := GetclickedCommand;
	    until mnu2 = cm_bck;
	    
	    KecocokanWeton;
	  end;
	until menu = cm_bck;
	PilihOpsi;
end;
	    
