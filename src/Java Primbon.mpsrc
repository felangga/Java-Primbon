      gambar:= FormAddImage(LoadImage('/HASIL.png'));
      hasil := FormAddString('Hasil dari '+SimpenA+' & '+SimpenB+' adalah : '+hitung(simpenA,SimpenB));
      if StringToInteger(hitung(simpenA,SimpenB)) >= 75 then
        smiley := FormAddImage(LoadImage('/bagus.png'))
      else
      if (StringToInteger(hitung(simpenA,SimpenB)) >= 26) and (StringToInteger(hitung(simpenA,SimpenB)) <= 74) then
        smiley := FormAddImage(LoadImage('/sedang.png'))
