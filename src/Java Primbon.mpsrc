function KonversiHari(Hari : String) : Integer;
begin
  if Hari = 'Minggu' then
    KonversiHari := 5
 else
  if Hari = 'Senin' then
    KonversiHari := 4
 else
  if Hari = 'Selasa' then
    KonversiHari := 3
 else
  if Hari = 'Rabu' then
    KonversiHari := 7
 else
  if Hari = 'Kamis' then
    KonversiHari := 8
 else
  if Hari = 'Jumat' then
    KonversiHari := 6
 else
  if Hari = 'Sabtu' then
    KonversiHari := 9;
end;

function KonversiNeptu(Neptu : String) : Integer;
begin
  if Neptu = 'Pon' then
    KonversiNeptu := 7
 else
  if Neptu = 'Wage' then
    KonversiNeptu := 4
 else
  if Neptu = 'Kliwon' then
    KonversiNeptu := 5
 else
  if Neptu = 'Legi' then
    KonversiNeptu := 8
 else
  if Neptu = 'Pahing' then
    KonversiNeptu := 9
end;

