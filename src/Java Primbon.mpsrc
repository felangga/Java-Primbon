function CariHari(Data : String) : String;
var  	hari,bulan,tahun,
      hasil, m, y1, y2 : integer;
begin
   Pisahtgl(Data);
   Hari := Konversi;
   Bulan := Konversi2;
   Tahun := Konversi3;   

   if bulan < 3 then 
   begin
     m     := bulan + 10;
     tahun := tahun - 1
   end 
  else
    m			 := bulan - 2;
    y1		 := tahun div 100;
    y2		 := tahun mod 100;
    hasil  := (hari + trunc(2.6*m - 0.1) + y2 + y2 div 4 + y1 div 4 - 2*y1 + 49) mod 7;
    if Hasil = 0 then CariHari := 'Minggu';
    if Hasil = 1 then CariHari := 'Senin';
    if Hasil = 2 then CariHari := 'Selasa';
    if Hasil = 3 then CariHari := 'Rabu';
    if Hasil = 4 then CariHari := 'Kamis';
    if Hasil = 5 then CariHari := 'Jumat';
    if Hasil = 6 then CariHari := 'Sabtu';
end;

