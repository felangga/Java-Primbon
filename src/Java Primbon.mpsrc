function BukaDatabase(namafile: string; apa : string): string; 
var ketemu : string; 
    res         : resource; 
    line        : string; 
    pos         : integer; 
begin 
  res := OpenResource('/'+namafile+'.txt');
   
  if (ResourceAvailable(res)) then 
  begin 
    repeat 
      line := ReadLine(res); 

      if line = apa then 
      begin 
        Ketemu := ReadLine(res); 
        break; 
      end; 
      else 
        line := ReadLine(res);
       
    until length(line) = 0; 
  end; 

  Bukadatabase := ketemu;
end;


